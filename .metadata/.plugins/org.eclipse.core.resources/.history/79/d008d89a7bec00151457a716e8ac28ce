package l6Objects;

public class Karta {

	private static int znak;
	private static int broj;

	public static int KARO = 1;
	public static int PIK = 2;
	public static int HERC = 3;
	public static int TREF = 4;
	
	public static int KEC = 1;
	public static int DVA = 2;
	public static int TRI = 3;
	public static int CETIRI = 4;
	public static int PET = 5;
	public static int SEST = 6;
	public static int SEDAM = 7;
	public static int OSAM = 8;
	public static int DEVET = 9;
	public static int DESET = 10;
	public static int ZANDAR = 11;
	public static int DAMA = 12;
	public static int KRALJ = 13;
	
	public Karta(int znak, int broj) {
		this.znak = znak;
		this.broj = broj;
	}

//	public int getZnak() {
//		return znak;
//	}
//
//	public int getBroj() {
//		return broj;
//	}

	public static String kartaZnak(){
		
		switch (znak) {
		case 1:
			return "Karo";
		case 2:
			return "Pik";
		case 3:
			return "Herc";
		case 4:
			return "Tref";
		default:
			return "Nepostojeci znak";
		}
	}

	public static String kartaBroj() {

		switch (broj) {
		case 1:
			return "Kec";
		case 2:
			return "Dvojka";
		case 3:
			return "Trojka";
		case 4:
			return "Cetvorka";
		case 5:
			return "Petica";
		case 6:
			return "Sestica";
		case 7:
			return "Sedmica";
		case 8:
			return "Osmica";
		case 9:
			return "Devetka";
		case 10:
			return "Desetka";
		case 11:
			return "Zandar";
		case 12:
			return "Dama";
		case 13:
			return "Kralj";
		default:
			return "Nepostojeci broj";
		}

	}

}
