package l6Objects;

public class Spil {

    public static int znakovi = 4;
    public static int brojevi = 13;
    public static int brojKarata = znakovi * brojevi;

    private Karta[][] cards;

    public Spil() {
        cards = new Karta[numSuits][numRanks];
        for (int suit = Spil.DIAMONDS; suit <= Card.SPADES; suit++) {
            for (int rank = Spil.ACE; rank <= Card.KING; rank++) {
                cards[suit-1][rank-1] = new Card(rank, suit);
            }
        }
    }

    public Card getCard(int suit, int rank) {
        return cards[suit-1][rank-1];
    }
}
